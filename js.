<body>
    <script> 
        const nota=prompt('Digite a sua nota:');
        if(nota>=70 && nota<=100){
           alert('Você esta aprovado!')
        }   
       
        else if(nota>=60 && nota<70){
           alert('Você tem o direito de recuperção!')  
        }

        else if(nota>=0 && nota<60){
           alert('Você esta reprovado!')
        }

        else{
           alert('Nota inválida!')
        }
    </script>
    
</body>
</html>
